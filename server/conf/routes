# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET        /                             controllers.Application.home
GET        /login                        controllers.Application.login
# POST       /validate                     controllers.Application.validateLogin
# POST       /signup                       controllers.Application.createUser
# GET        /games                        controllers.Application.showGames

# Pictionary Pages
GET       /pictionary                   controllers.PictionaryController.pictionary
GET       /createLobby                  controllers.PictionaryController.createLobby
GET       /pictionarySocket             controllers.PictionaryController.socket

# Prefix must match `play.assets.urlPrefix`
GET        /assets/*file                 controllers.Assets.at(file)
GET        /versionedAssets/*file        controllers.Assets.versioned(path="/public", file: Asset)